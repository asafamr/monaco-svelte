    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sample Server",
            "program": "${workspaceRoot}/example/lib/server.js",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/example/lib/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Sample Server (external)",
            "program": "${workspaceRoot}/example/lib/server.js",
            "args": [
                "--external"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/example/lib/**/*.js"
            ]
        }
    ]
}